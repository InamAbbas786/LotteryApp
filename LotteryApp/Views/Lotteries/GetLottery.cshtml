@model IEnumerable<LotteryApp.Models.Response.DrawInfoResponse>
@{ 
    int Count = 1;
    <table class="table table-bordered table-hover">
        <thead class="thead-light">
            <tr>
                <th  style="background: #007bff !important; color: white ">Numbers Matched</th>
                <th  style="background: #007bff !important; color: white">Calculated Odds</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            if (Count % 2 == 0)
            {
                <tr class="info">
                    <td>@item.Key Main Numbers</td>
                    <td>1 in @item.Values.ToString("#,#")</td>
                </tr>
            }
            else
            {
                <tr class="active">
                    <td>@item.Key Main Numbers</td>
                    <td>1 in @item.Values.ToString("#,#")</td>
                </tr>
            }
            Count++;
        }
    </table>
}
